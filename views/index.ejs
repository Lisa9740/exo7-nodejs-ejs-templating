<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
   
</head>
<body class="container">

<header>
    <% include partials/header %>
    
</header>

<main>
    <div class="jumbotron">
         
        <h1 class="text-center">Mes compétences informatiques 
            
                "<i class='fas fa-star'></i>"

</h1>

    <p> <ul class="list-group-item">
        <!-- boucle qui permet d'afficher toutes les compétences et les niveaux -->
            <% competences.forEach(function(competence) { %>
                    <% var niveau = competence.niveau  %>
                <!-- affichage de toutes les compétences du fichier json compétence.json -->
                <li class="list-group-item"> <%= competence.competence %> -
                    <!-- boucle qui permet d'afficher les étoiles par rapport au niveau de compétence  -->
                    <% for (var f = 0; f < niveau; f++) {%>
                         <i class='fas fa-star'></i>
                <% }  %>

                    </li>
            <% }); %>
        </ul> </p>

        
    </div>

</main>

<footer>
    <% include partials/footer %>
</footer>

</body>
</html>
